{{>blog-info blog}}

{{!-- displaying form and comments only if logged in --}}
{{#if loggedIn}}
<form class='comment-form'>
    <div>
        <textarea class='form control rounded-3 z-depth-1 ml-5' name='comment-body' rows='4'
            placeholder='insert comment here'></textarea>
    </div>

    <div>
        <button class='btn btn-warning ml-5 mb-5' type='submit'>add a comment</button>
    </div>
</form>
{{/if}}

{{>comments blog.comments}}

