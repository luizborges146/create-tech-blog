<div class='mb-5 pt-3'>
    <a href='/dashboard/create/'><button class='btn btn-primary justify-content-end' id='create-blog'>create a
            blog</button></a>
    <h2 class='title pb-4'>dashboard: your blogs</h2>
    {{#if blogs.length}}
</div>

{{#each blogs as | blog|}}
{{>blog-info blog}}
<a href='/dashboard/edit/{{blog.id}}'><button class='btn btn-warning mb-5 ml-5'>edit blog</button></a>
{{/each}}

{{else}}
<h6 class ='text center font-italic pb-4'> you do not currently have any blogs</h6>

{{/if}}